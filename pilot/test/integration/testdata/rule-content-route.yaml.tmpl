apiVersion: config.istio.io/v1alpha2
kind: V1alpha2RouteRule
metadata:
  name: content-route
spec:
  hosts:
    - c
  http:
    - match:
      - headers:
          version:
            exact: v2
        source_labels:
          version: v1
      route:
      - destination:
          name: c
          subset: v2
        weight: 100
    - route:
      - destination:
          name: v1
        weight: 100