# The following policy selects workloads c in all namespaces

apiVersion: "security.istio.io/v1beta1"
kind: AuthorizationPolicy
metadata:
  name: policy-ns-root-{{ .dst }}
  namespace: "{{ .RootNamespace }}"
spec:
  selector:
    matchLabels:
      "app": "{{ .dst }}"
  rules:
  - to:
    - operation:
        paths: ["/policy-{{ .RootNamespace }}-{{ .dst }}"]
---
