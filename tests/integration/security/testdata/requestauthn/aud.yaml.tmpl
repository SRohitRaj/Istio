apiVersion: security.istio.io/v1beta1
kind: RequestAuthentication
metadata:
  name: request-authn-part1
spec:
  selector:
    matchLabels:
      app: {{ .dst }}
  jwtRules:
  - issuer: "test-issuer-1@istio.io"
    jwksUri: "https://jwt-server.jwksns.svc.cluster.local:8443/jwks"
    audiences:
    - "foo"
  - issuer: "test-issuer-2@istio.io"
    jwksUri: "https://jwt-server.jwksns.svc.cluster.local:8443/jwks"
    audiences:
    - "bar"
---
apiVersion: security.istio.io/v1beta1
kind: RequestAuthentication
metadata:
  name: requst-authn-part2
spec:
  selector:
    matchLabels:
      app: {{ .dst }}
  jwtRules:
  - issuer: "test-issuer-2@istio.io"
