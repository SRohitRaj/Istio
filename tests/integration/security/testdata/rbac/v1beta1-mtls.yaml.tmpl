# Enforce access control based on mTLS identities.

apiVersion: authentication.istio.io/v1alpha1
kind: Policy
metadata:
  name: "mtls"
  namespace: "{{ .Namespace }}"
spec:
  targets:
  - name: b
  peers:
  - mtls: {}
---
apiVersion: "networking.istio.io/v1alpha3"
kind: "DestinationRule"
metadata:
  name: "mtls"
  namespace: "{{ .Namespace }}"
spec:
  host: "b.{{ .Namespace }}.svc.cluster.local"
  trafficPolicy:
    tls:
      mode: ISTIO_MUTUAL
---
apiVersion: "security.istio.io/v1beta1"
kind: AuthorizationPolicy
metadata:
  name: policy-b
  namespace: "{{ .Namespace }}"
spec:
  selector:
    matchLabels:
      "app": "b"
  rules:
  - to:
    - operation:
        paths: ["/principal-a"]
        methods: ["GET"]
    from:
    - source:
        principals: ["cluster.local/ns/{{ .Namespace }}/sa/a"]
  - to:
    - operation:
        paths: ["/namespace-2"]
        methods: ["GET"]
    from:
    - source:
        namespaces: ["{{ .Namespace2 }}"]
---
